# Firebase Configuration Template
# Rename this file to .env.local and fill in your Firebase credentials

# Get these values from Firebase Console > Project Settings > General
NEXT_PUBLIC_FIREBASE_API_KEY=your_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id

# Cloudinary (Optional - for image optimization)
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your_cloud_name

# Mercado Pago (Get from Mercado Pago Developer Dashboard)
NEXT_PUBLIC_MERCADO_PAGO_PUBLIC_KEY=your_public_key

# Resend (for emails)
RESEND_API_KEY=your_resend_api_key
